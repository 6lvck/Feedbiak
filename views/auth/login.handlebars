<div class="login d-flex">
    <div class="login-form">
        <h3>Login</h3>
        <form>
            <div class="form-group">
                <label for="email">Email</label>
    <input type="email" class="form-control" aria-describedby="emailHelp" placeholder="joe@gmail.com" required>
            </div>
                <div class="form-group">
                    <label for="password">Password</label>
    <input type="password" class="form-control" aria-describedby="textHelp" placeholder="Enter your password" required>
            </div>
            <button type="submit" class="btn btn-primary signup-btn">Log in</button>
        </form>
    </div>
    <div class="login-img">
        <img src="../../public/static/login.png" alt="">
    </div>
</div>